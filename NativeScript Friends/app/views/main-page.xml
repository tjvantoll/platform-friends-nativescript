<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <ScrollView>
        <GridLayout>
            <StackLayout>
                <Image url="~/app/res/friends.png" cssClass="app-logo" />
                <StackLayout cssClass="login-container">
                    <TextField id="username" hint="e-mail" text="{{Username}}"/>
                    <TextField id="password" hint="password" secure="true" text="{{Password}}"/>
                </StackLayout>
                <Button text="Log in" id="login" cssClass="login-button"/>
                <Label text="Don't have an account yet?" cssClass="sub-title" />
                <Button text="Sign up for free" id="signup" tap="navigateRegister" cssClass="signup-button"/>
            </StackLayout>
        </GridLayout>
    </ScrollView>
</Page>