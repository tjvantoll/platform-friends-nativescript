<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded"
      xmlns:customControls="app/xml-declaration/breadcrumb">
    <ScrollView>
        <GridLayout>
            <StackLayout>
                <GridLayout cssClass="header-container">
                    <GridLayout tap="goBack">
                        <Image url="~/app/res/icon-arrow_left@2x.png" cssClass="header-button align-left"/>
                    </GridLayout>
                    <Label text="Sign Up" cssClass="header-context-label" />
                </GridLayout>
                <StackLayout cssClass="register-section">
                    <TextField id="name" hint="Name" text="{{name}}"/>
                    <TextField id="email" keyboardType="email" hint="Email" text="{{email}}"/>
                    <TextField id="username" hint="Username" text="{{username}}"/>
                    <TextField id="password" hint="Password" secure="true" text="{{Password}}"/>
                    <GridLayout tap="chooseBirthDate" id="birthDatePickerContainer">
                        <Image cssClass="arrow-icon" url="~/app/res/right-arrow.png" />
                        <Label id="birth-date" text="{{ birthdate }}" />
                    </GridLayout>
                    <GridLayout tap="chooseGender" >
                        <Image cssClass="arrow-icon" url="~/app/res/right-arrow.png" />
                        <Label id="gender" text="{{ gender }}" />
                    </GridLayout>
                </StackLayout>
                <TextView id="about" text="{{about}}" cssClass="about-section" />
                <Button text="Register" id="register" cssClass="register-button"/>
            </StackLayout>
        </GridLayout>
    </ScrollView>
</Page>