<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <GridLayout rows="auto, auto, *">
        <GridLayout cssClass="header-container" columns="auto, *">
            <Image src="~/app/res/back-dark.png" tap="goBack" cssClass="header-button align-left ios"/>
            <Image src="~/app/res/back-light.png" tap="goBack" cssClass="header-button align-left android"/>
            <Label text="Sign up" cssClass="header-context-label align-left android" col="1"/> 
            <Label text="Friends" colSpan="2" cssClass="header-context-label align-center ios" />
        </GridLayout>
        <StackLayout cssClass="horizontal-line ios" row="1"></StackLayout>
        <StackLayout row="2">
            <TextField id="email" cssClass="text-input" keyboardType="email" hint="e-mail" text="{{ email }}"/>
            <TextField id="password" cssClass="text-input" hint="password" secure="true" text="{{ password }}"/>
            <TextField id="name" cssClass="text-input" hint="name" text="{{ name }}"/>
<!--        <GridLayout tap="chooseBirthDate" id="birthDatePickerContainer">
                <Image cssClass="arrow-icon" src="~/app/res/right-arrow.png" />
                <Label id="birth-date" text="{{ birthDate || 'Birth Date' }}" />
            </GridLayout> -->
            <Label id="gender" cssClass="text-input" text="{{ gender || 'Gender' }}" tap="chooseGender"/>
            <TextField id="about" cssClass="text-input" hint="about" text="{{ about }}" />
            <Button text="Sign up" id="register" tap="{{ signUp }}" cssClass="signup-button"/>
        </StackLayout>
        <AbsoluteLayout  cssClass="activity-indicator" style.visibility="true" row="3">
          <ActivityIndicator busy="{{ isLoading }}" cssClass="activity-indicator" />
        </AbsoluteLayout>
    </GridLayout>
</Page>
